<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#FFF">
    <RelativeLayout
        android:id="@+id/gridViewItemTBL"
        android:layout_width="130dp"
        android:background="#fff"
        android:layout_height="110dp">
        <TextView
            android:id="@+id/txtTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="LÀM BÀI"
            android:textSize="23dp" />
        <TextView
            android:id="@+id/txtSoCauDung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtTrangThai"

            android:text="25 câu/ 19 phút"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/txtTenBoDe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Đề số 1"
            android:textStyle="bold"
            android:textSize="15dp" />

    </RelativeLayout>
</RelativeLayout>