<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#FFF">
    <RelativeLayout
        android:id="@+id/gridViewItemTBL"
        android:layout_width="130dp"
        android:background="#fff"
        android:layout_height="110dp">
        <TextView
            android:id="@+id/txtTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="LÀM BÀI"
            android:textColor="#000"
            android:textSize="19dp" />
        <TextView
            android:id="@+id/txtSoCauDung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtTrangThai"
            android:textColor="#000"
            android:text="25 câu/ 19 phút"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/txtTenBoDe"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Đề số 1"
            android:textColor="#000"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="13dp" />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:rotation="+180"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:background="@drawable/circle_shape"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="0" />

    </RelativeLayout>
</RelativeLayout>